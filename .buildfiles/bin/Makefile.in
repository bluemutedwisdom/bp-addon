prefix=@prefix@
exec_prefix=@exec_prefix@
LOGDIR=@localstatedir@
CFGDIR=@sysconfdir@
BINDIR=@bindir@
CGIDIR=@sbindir@
DATAROOTDIR=@datarootdir@
LIBEXECDIR=@libexecdir@

INSTALL=@INSTALL@
INSTALL_OPTS=@INSTALL_OPTS@

CP=@CP@

all html:

clean:
	-rm bp-addon-check-backend-connection.pl
	-rm bp-addon-consistency-check.pl
	-rm bp-addon-session-timeout
	-rm bp-cfg2service-cfg.pl

distclean: clean
	-rm Makefile

devclean: distclean

install:
	$(INSTALL) -m 775 $(INSTALL_OPTS) -d $(BINDIR)
	$(INSTALL) -m 755 $(INSTALL_OPTS) *.pl $(BINDIR)
	$(INSTALL) -m 755 $(INSTALL_OPTS) bp-addon-session-timeout $(BINDIR)

